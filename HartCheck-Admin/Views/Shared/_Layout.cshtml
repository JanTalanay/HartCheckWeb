<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HartCheck</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert.min.js"/>
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    <link href="~/lib/datatables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"></script>

</head>
<body id="body-pd">
    <header class="header" id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>                                       
                </button>    
            </div>      
        </nav>
        <partial name="_LoginPartial" />
    </header>

    <div class="l-navbar" id="nav-bar" >
        <nav class="nav">
            <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name" >Hartcheck-Admin</span> </a>
                <div class="nav_list"> 
                    <a class="nav_link" asp-area="" asp-controller="Analytics" asp-action="Index"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">User Analytics</span> </a> 
                    <a class="nav_link"  asp-area="" asp-controller="Patient" asp-action="Index"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Patient List Management</span> </a> 
                    <a class="nav_link"  asp-area="" asp-controller="Doctor" asp-action="Index"> <i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Doctor List Management</span> </a> 
                    <a class="nav_link" asp-area="" asp-controller="EducationalResource" asp-action="Index"> <i class='bx bx-bookmark nav_icon'></i> <span class="nav_name">Educational Resource</span> </a> 
                    <a class="nav_link" asp-area="" asp-controller="BugReport" asp-action="Index"> <i class='bx bx-folder nav_icon'></i> <span class="nav_name">Bug Report</span> </a> 
                </div>
            </div> 
            <div>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav_link" asp-area="" asp-controller="Account" asp-action="Logout"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">Logout</span> </a>
            }else
            {
                <a class="nav_link" asp-area="" asp-controller="Account" asp-action="Login"> <i class='bx bx-log-in nav_icon'></i> <span class="nav_name">Login</span> </a>
                <a class="nav_link" asp-area="" asp-controller="Account" asp-action="Register"> <i class='bx bx-log-in nav_icon'></i> <span class="nav_name">Register</span> </a>
            }
           </div>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Hartcheck-Admin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/font-awesome/js/fontawesome.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
