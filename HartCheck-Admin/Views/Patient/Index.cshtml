@using HartCheck_Admin.Models
@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Patient List Management";
}
<h1>@ViewData["Title"]</h1>



<div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-5 row-cols-md-3 g-3">
            @if (Model != null)
            {
                @foreach(var item in Model)
                {
                    <div class="card shadow-sm w-100">
            
                        <div class="card-body">
                            <p class="card-text">@item.firstName</p>
                            <p class="card-text">@item.lastName</p>
                            <p class="card-text">@item.email</p>
                            <p class="card-text">@item.birthdate</p>
                            <p class="card-text">@item.phoneNumber</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="BugReport" asp-action="Delete" asp-route-id="@item.usersID" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>      
                }
            }  