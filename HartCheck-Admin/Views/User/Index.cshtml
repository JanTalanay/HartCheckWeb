@using HartCheck_Admin.Models
@model IEnumerable<User>

<h1>@ViewData["Title"]</h1>


<br /><br />
@if (Model.Count() < 1)
{
	<div class="alert alert-info">
		No User records found.
	</div>
}
else
{
	<div id="role0" style="display:none;">
		<table id="User" class="table table-striped table-hover">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email Address</th>
				<th>Phone Number</th>
				<th>Birthdate</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				@if (item.role == 0)
				{
					<tr>
						<td>@item.firstName</td>
						<td>@item.lastName</td>
						<td>@item.email</td>
						<td>@item.phoneNumber</td>
						<td>@item.birthdate</td>
						<td>
							<button class="btn btn-danger btn-sm deleteBtn" data-id="@item.usersID">
								<i class="fas fa-trash"></i>
								Delete
							</button>
						</td>
					</tr>
				}
			}
		</tbody>
		</table>
	</div>
	
	<div id="role1" style="display:none;">
		<table id="User" class="table table-striped table-hover">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email Address</th>
				<th>Phone Number</th>
				<th>Birthdate</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				@if (item.role == 1)
				{
					<tr>
						<td>@item.firstName</td>
						<td>@item.lastName</td>
						<td>@item.email</td>
						<td>@item.phoneNumber</td>
						<td>@item.birthdate</td>
						<td>
							<a asp-controller="User" asp-action="View" asp-route-id="@item.usersID"
								class="btn btn-info btn-sm">
								<i class="fas fa-eye"></i>
								View
							</a>
							<button class="btn btn-danger btn-sm deleteBtn" data-id="@item.usersID">
								<i class="fas fa-trash"></i>
								Delete
							</button>
						</td>
					</tr>
				}
			}
		</tbody>
		</table>

		<div class="button-box col-lg-12 btn-group viewbutton">
			<a asp-controller="User" asp-action="ViewApproved" class="btn btn-outline-info button-link"  id="approve-button"  > View Approved </a>
            <a asp-controller="User" asp-action="ViewPending" class="btn btn-outline-info button-link"  id="loadViewPendingButton"  > View Pending </a>
            <a asp-controller="User" asp-action="ViewDenied" class="btn btn-outline-danger button-link"  id="loadViewDeniedButton"  >View Declined</a>
         </div>
	</div>
}

<form id="DeleteForm" asp-controller="User" asp-action="Delete" method="post">
	<input type="hidden" id="HiddenUserID" name="Id" value="" /> 
</form>

@{
    var viewPendingUrl = Url.Action("ViewPending", "User");
}
@section Scripts {
	<script>


		 document.getElementById("role0Button").addEventListener("click", function (event) {
        event.preventDefault();
        document.getElementById("role0").style.display = "block";
        document.getElementById("role1").style.display = "none";
       
         document.querySelector("h1").innerText = "Patient List Management";
		 });

		 document.getElementById("role1Button").addEventListener("click", function (event) {
			event.preventDefault();
			document.getElementById("role0").style.display = "none";
			document.getElementById("role1").style.display = "block";

			document.querySelector("h1").innerText = "Doctor List Management";
		});

		$(document).ready( function () {
			 $('#User').DataTable();
				} );
		$('.deleteBtn').click(function(e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((confirm) => {
                if (confirm) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $("#HiddenUserID").val(id);
                    $('#DeleteForm').submit();
				}
			});
		});
	</script>
}