@using HartCheck_Admin.Models
@model IEnumerable<EducationalResource>
@{
    ViewData["Title"] = "Educational Resources";
}
<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary my-2" asp-controller="EducationalResource" asp-action="Create">Add a Resource</a>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-5 row-cols-md-3 g-3">
            @if (Model != null)
            {
                @foreach(var item in Model)
                {
                <div class="col">
                <div class="card shadow-sm">
            
                <div class="card-body">
                 <p class="card-text">@item.text</p>
                 <p class="card-text">@item.link</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-controller="EducationalResource" asp-action="Edit" asp-route-id="@item.resourceID" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="EducationalResource" asp-action="Delete" asp-route-id="@item.resourceID" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                    
                    </div>
                    </div>
                </div>
                </div>       
                }
            }  
            
                      
            
