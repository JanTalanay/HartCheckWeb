@using HartCheck_Admin.Models
@model IEnumerable<BugReport>
@{
    ViewData["Title"] = "Bug Reports";
}
<h1>@ViewData["Title"]</h1>


<div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-5 row-cols-md-3 g-3">
            @if (Model != null)
            {
                @foreach(var item in Model)
                {
                <div class="col">
                <div class="card shadow-sm">
            
                <div class="card-body">
                 <p class="card-text">@item.bugID</p>
                 <p class="card-text">@item.userID</p>
                 <p class="card-text">@item.featureID</p>
                 <p class="card-text">@item.description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-controller="BugReport" asp-action="Delete" asp-route-id="@item.bugID" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                    
                    </div>
                    </div>
                </div>
                </div>       
                }
            }  
            
                      
            
