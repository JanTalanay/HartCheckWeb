@model List<ConsultationViewModel>
@{
    ViewData["Title"] = "View Consultation";
}
@if (Model != null && Model.Count > 0)
{
    <head>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css"/>
    </head>
    <table id="example" class="table table-striped" style="width:70%">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone No.</th>
            <th>Consultation Sched</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.schedDateTime</td>
                <td>
                    <form asp-controller="Patient" asp-action="ViewConsultation">
                        <input type="hidden" name="consultationId" value="@item.consultationID" />
                        <button type="submit" class="btn btn-danger btn-sm">Deny Request</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
    new DataTable('#example');</script>

}
else{
    <h1>You have no Patients</h1>
}
