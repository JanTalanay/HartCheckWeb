@model HartCheck_Doctor_test.DTO.DoctorScheduleDto

@{
    ViewBag.Title = "Schedule an Appointment";
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<div class="main_container" style="margin-left: 50%">
    <div class="loginform c" style="background-color: white; border-radius:  10px; box-shadow:  0  4px  8px  0 rgba(0,  0,  0,  0.2),  0  6px  20px  0 rgba(0,  0,  0,  0.19);">
        <h2>Schedule an Appointment</h2>
        <p>Please input your available date and time
        </p>
        @using (Html.BeginForm("ScheduleAppointment", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.TextBoxFor(model => model.schedDateTime, new { @class = "inp_log_pass", type = "datetime-local", placeholder = "Select a date and time" })
            @Html.ValidationMessageFor(model => model.schedDateTime)

            <button type="submit" class="btn_primary" style="margin-bottom: 5%;">Save</button>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    config ={
        enableTime: true,
        dateFormat:"Y-m-d h:i K",
        time_24hr: false,
        minDate: "today"
    }
    flatpickr("input[type=datetime-local]", config);
</script>